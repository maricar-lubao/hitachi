{
  "info": {
    "name": "SmartPark API",
    "description": "Smart Parking Management System API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "login"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Parking Lots",
      "item": [
        {
          "name": "Get All Parking Lots",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/parking-lots",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "parking-lots"
              ]
            }
          }
        },
        {
          "name": "Get Parking Lot by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/parking-lots/LOT-001",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "parking-lots",
                "LOT-001"
              ]
            }
          }
        },
        {
          "name": "Get Parking Lot Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/parking-lots/LOT-001/status",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "parking-lots",
                "LOT-001",
                "status"
              ]
            }
          }
        },
        {
          "name": "Get Vehicles in Lot",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/parking-lots/LOT-001/vehicles",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "parking-lots",
                "LOT-001",
                "vehicles"
              ]
            }
          }
        },
        {
          "name": "Register Parking Lot",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"lotId\": \"LOT-004\",\n  \"location\": \"City Center\",\n  \"capacity\": 75,\n  \"costPerMinute\": 0.60\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/parking-lots",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "parking-lots"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Vehicles",
      "item": [
        {
          "name": "Get All Vehicles",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/vehicles",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "vehicles"
              ]
            }
          }
        },
        {
          "name": "Get Vehicle by License Plate",
          "request": {
            "method": "GET",
