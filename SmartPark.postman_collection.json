              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/vehicles/ABC-123",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "vehicles",
                "ABC-123"
              ]
            }
          }
        },
        {
          "name": "Register Vehicle",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"licensePlate\": \"TEST-999\",\n  \"type\": \"CAR\",\n  \"ownerName\": \"Test User\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/vehicles",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "vehicles"
              ]
            }
          }
        },
        {
          "name": "Check-in Vehicle",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"licensePlate\": \"ABC-123\",\n  \"lotId\": \"LOT-001\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/vehicles/check-in",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
